<?xml version="1.0" encoding="utf-8"?>
<com.attt.themovieapp.viewpods.ActorListViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="@dimen/margin_medium2"
    android:paddingTop="@dimen/margin_large"
    android:layout_height="wrap_content">
<androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/tvBestActor"
    android:text="@string/lbl_best_actor"
    android:textColor="@color/colorSecondaryText"
    android:textStyle="bold"
    android:layout_marginStart="@dimen/margin_medium2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMoreActors"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/tvBestActor"
        android:textColor="@color/white"
        android:text="@string/lbl_more_actors"
        android:textStyle="bold"
        android:layout_marginEnd="@dimen/margin_medium2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBestActor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBestActor"
        android:layout_marginTop="@dimen/margin_medium2"
        android:clipToPadding="false"
        android:paddingEnd="@dimen/margin_medium2" />

</com.attt.themovieapp.viewpods.ActorListViewPod>