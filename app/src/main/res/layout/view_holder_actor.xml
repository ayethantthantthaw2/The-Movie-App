<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_actor"
    android:layout_height="@dimen/height_actors"
    android:layout_marginStart="@dimen/margin_medium2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBestActor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/placeholder_actor" />
    <View
        android:background="@drawable/gradient_actor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        app:srcCompat="@drawable/ic_baseline_favorite_white_24dp"
        android:layout_width="@dimen/margin_large"
        android:layout_alignParentEnd="true"
        android:tint="@color/colorAccent"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_height="@dimen/margin_large"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnLike"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_medium2"
        android:layout_width="@dimen/margin_medium2"
        android:layout_marginStart="@dimen/margin_card_medium2"
        app:srcCompat="@drawable/ic_baseline_thumb_up_white_2dp4"
        android:tint="@color/colorAccent"
        android:layout_height="@dimen/margin_medium2"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_alignBottom="@+id/btnLike"
        android:text="YOU LIKE 15 MOVIES"
        android:textSize="@dimen/text_smaller"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_toEndOf="@id/btnLike"
        android:elevation="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_card_medium2"
        android:textStyle="bold"
        android:textColor="@color/colorSecondaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvActorName"
        android:layout_above="@id/btnLike"
        android:layout_width="wrap_content"
        android:text="Kim Nam Joon"
        android:layout_marginEnd="@dimen/margin_card_medium2"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_height="wrap_content"/>

</RelativeLayout>